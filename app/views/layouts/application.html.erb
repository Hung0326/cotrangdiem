<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>  
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'top/brush.png' %>
    <!-- <meta http-equiv="refresh" content="8; url=http://192.168.0.121:3000" /> -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="app">
      <% if !params[:uag] %>
        <%= render 'user/top/header/header' %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
